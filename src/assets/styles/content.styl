/** css **/
.audiosBox{
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
  min-height: 420px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #f6f7f7;
  box-shadow 4px 0px 26px #bbb
}
.audioOpen{
  width: 280px;
  height: 280px;
  border: 2px solid #999;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 20px;
  font-size: 64px;
}
.slid
  flex 1
  position relative
  padding-top 64px
  .duration
    height 120px
    margin-top 80px
    span
      line-height 66px
      min-width: 100px;
      text-align: center;
      display: inline-block;
      font-size: 44px;
      margin-top: 10px
    span.full-time
      float right
      margin-right 24px
      i
        font-size 22px
.title view{
  text-indent: 2em;
}
.highlight {
  // display: inline-block;
  font-weight: bold;
  color: #000;
  padding 8px
  background #f1f4f4
  border-radius 12px
  text-indent: 0;
}
.p-font {
  font-weight: bold;
  color: #000;
  font-size: 32px;
}

.word-action-block
  position fixed
  left 0
  right 0
  bottom 0
  margin auto
  width 100%
  background rgba(255, 255, 255, 1)
  box-shadow 4px 0px 26px #bbb
  color #000
  border-top-left-radius 22px
  border-top-right-radius 22px
  .title
    font-size 64px
    font-weight 500
    background #d8d8d8
    border-top-left-radius 22px
    border-top-right-radius 22px
    display block
    padding 16px
    line-height 92px
    i
      font-size 38px
      vertical-align middle
  p.summary
    padding 16px
    padding-top 0
    padding-bottom 0
    line-height 48px
    min-height 88px
    margin-top 20px
    margin-bottom 20px
    label
      font-size 34px
      color #777
  .word-area
    border-top #d8d8d8 2px solid
    position relative
    ul
      margin 0
      padding 0
    li
      display inline-block
      background #f4f4f4
      width 50%
      padding-top 64px
      padding-bottom 64px
      text-align center
      font-size 54px
    span.split
      position: absolute;
      width: 1px;
      line-height: 30px;
      border-left: #d8d8d8 1px solid;
      margin: auto;
      top: 0;
      bottom: 0;
      left: 0;
      right: 0;
.coins
  display block
  position fixed
  z-index 9
  width 100%
  padding 32px
  // background rgba(0, 0, 0, 0.5)
  i
    position absolute
    z-index 3
  label
    position absolute
    top 42px
    left 52px
    z-index 2
    width 200px
    text-indent 88px
    display inline-block
    font-size 42px
    line-height 42px
    background #02416d
    color #fff
    border #02507c 12px solid
    border-radius 8px
    text-shadow 1px 4px 8px #361067

$black = #333;
$white = #fff;

$primary-color = #f65a52;
$primary-color-dark = darken( $primary-color, 10% );
$primary-color-tint = lighten( $primary-color, 15% );
$primary-font = "VT323", monospace;

$secondary-color = #94acbd;
$secondary-color-dark = darken( $secondary-color, 10% );

$options-color = #c5d5ee;
$options-color-hover = darken( $options-color, 7% );
$success-color = #7bd55a;
$error-color = #ff8b62;

$border-radius-main = 1rem;
$border-width = 6px;
$border-main = solid $border-width $black;
$options-height = 48px;
